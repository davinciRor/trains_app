<%= form_for [:admin, route], url: admin_route_update_name_path(route), html: {method: :patch, style: "display: #{hidden ? 'none' : 'block'}"} do |f| %>
    <%= render 'common/errors', resource: route %>

    <div class="field">
      <%= f.text_field :name %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
