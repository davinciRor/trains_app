<tr>
  <td><div id="train_title_<%=train.id%>"><%= train.number %></div>
    <%= render 'form', train: train, hidden: true, not_index: false %>
  </td>
  <td><%= link_to t('common.show'), admin_train_path(train) %></td>
  <td><%= link_to t('common.edit'), '', class: 'edit_train', data: { train_id: train.id } %></td>
  <td><%= link_to t('common.back'), admin_train_path(train), method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
